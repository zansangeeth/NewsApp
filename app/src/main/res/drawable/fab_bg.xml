<ripple android:color="?attr/colorControlHighlight"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#FFFFFF"
                        android:endColor="#FF3A44" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_favourite" android:gravity="center" />
        </layer-list>
    </item>
</ripple>